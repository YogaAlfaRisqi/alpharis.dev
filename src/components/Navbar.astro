---
import { navLinks } from '../constants/navLinks.ts';
---

<header
  class="fixed top-0 w-full backdrop-blur bg-white/70 dark:bg-gray-900/70 shadow-xs z-50"
>
  <nav
    class="max-w-3xl md:max-w-6xl mx-auto px-4 sm:px-6 flex justify-start items-center"
    x-data="{ isOpen: false }"
  >
    <a href="/">
      <img src="public/Logo1.png" alt="Yogaalr.dev Logo" class="h-15 md:h-15 lg:h-20" />
    </a>
    <div class="flex-grow flex justify-end items-center space-x-4">
      <!-- Desktop Menu -->
      <ul class="hidden md:flex space-x-6">
      {
        navLinks.map((link) => (
        <li>
          <a href={link.href} class="hover:text-blue-600 transition text-xl font-light">
          {link.name}
          </a>
        </li>
        ))
      }
      </ul>

      <!-- Mobile Menu Button -->
      <button
      @click="isOpen = !isOpen"
      class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition"
      aria-label="Toggle menu"
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
      </button>

      <!-- Mobile Menu Dropdown -->
      <div
      x-show="isOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform translate-x-full"
      x-transition:enter-end="opacity-100 transform translate-x-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 transform translate-x-0"
      x-transition:leave-end="opacity-0 transform translate-x-full"
      class="absolute right-0 top-16 w-48 py-2 bg-white dark:bg-gray-900 rounded-lg shadow-lg md:hidden origin-top"
      @click.away="isOpen = false"
      >
      <ul class="flex flex-col">
        {
        navLinks.map((link) => (
          <li>
          <a
            href={link.href}
            class="block px-4 py-2 text-lg font-light hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-blue-600 transition"
          >
            {link.name}
          </a>
          </li>
        ))
        }
      </ul>
      </div>
    </div>
    </nav>
  </header>
